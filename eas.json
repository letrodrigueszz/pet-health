{
  "cli": {
    "version": ">= 16.20.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk" // MANTÉM: Força a criação de um APK para testes internos.
      },
      "env": {
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true" // MANTÉM: Ajuda a ignorar conflitos NPM no build.
      }
    },
    "production": {
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
